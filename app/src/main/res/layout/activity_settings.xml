<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Write Your Phone Number"
        android:background="@drawable/input_design"
        android:layout_below="@+id/relative1"
        android:padding="14dp"
        android:inputType="number"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Questions"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/find_phone_number"/>

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What's Your School Name Which You Studied"
        android:background="@drawable/input_design"
        android:layout_below="@+id/title_questions"
        android:padding="14dp"
        android:layout_margin="15dp"/>

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="what's Your Favourite food"
        android:background="@drawable/input_design"
        android:layout_below="@+id/question_1"
        android:padding="14dp"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_2"
        android:layout_margin="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:padding="14dp"
        android:text="Verify"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17dp" />

</RelativeLayout>